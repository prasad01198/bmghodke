    <script>
        function deleteItem(itemId) {
            // AJAX request to delete item
            fetch('/deleteItem', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ itemId: itemId }),
            })
